         #/bin/bash!
         


prueba(){
	dpkg -s openvpn &> /dev/null  			#revisa si se encuentra istalado

 	   if [ $? -ne 0 ]								#si esta dara 1 asi que te dira que esta instalado y no hara nada 

  	      then
        	    echo "VPN not installed, installing..."  
        	    sudo apt-get update					#te hara una actualizacion 
        	    sudo apt-get install openvpn		#te instalara el paquete
	
	        else
	            echo    "VPN Installed"
	    fi
    	dpkg -s unzip &> /dev/null  			#revisa si se encuentra istalado

	    if [ $? -ne 0 ]								#si esta dara 1 asi que te dira que esta instalado y no hara nada 
	
	        then
	            echo "UNZIP not installed, installing..."  
	            sudo apt-get update					#te hara una actualizacion 
	            sudo apt-get install unzip		#te instalara el paquete
	
	        else
	            echo    "UNZIP Installed"
	    fi
	        	dpkg -s unzip &> /dev/null  			#revisa si se encuentra istalado

	    if [ $? -ne 0 ]								#si esta dara 1 asi que te dira que esta instalado y no hara nada 
	
	        then
	            echo "UNZIP not installed, installing..."  
	            sudo apt-get update					#te hara una actualizacion 
	            sudo apt-get install unzip		#te instalara el paquete
	
	        else
	            echo    "UNZIP Installed"
	    fi
}
