            'networknetstat'
            ;;
        3)
            clear
            'Performance'
            ;;
        *)
			clear
			'Network'
			;;
    esac
}
networknetstat(){
	echo "------------------------"
    echo "--------netstat---------"
    echo "------------------------"
    echo
    echo "Que comando quieres eleguir: "
    echo "1) netstat -ap|grep http"
    echo "2) ip route show"
    echo "3) Volver atras"
   
    echo
    echo -n "Indica una opcion: "
    read op
   
    case $op in
        1)
            clear
            echo
            echo "comando :
            netstat -ap|grep http"
            echo "uso :
            programas que se ejecutan en un puerto."
            echo "salida :"
            netstat -ap|grep http
            echo
            echo "ayuda :"
            echo ---------------------------------------------------------------------------------------------------------
			echo "protocolo :
			protocolo de transporte que utuliza"
			echo "user :
			usuario que esta utilizando ese puerto"
			echo "direcion :
			direcion de la paguina"
			echo "conexion :
			si esta establecida o no y a que buscador"
            echo
            'volvermenu'
            ;;
        2)
            clear
            echo
            echo "comando :
            Netstat -s"
            echo "uso :
            Muestra estadísticas por protocolo. De forma predeterminada, se muestran las estadísticas para el TCP, UDP, ICMP e IP. 
            El parámetro -s se puede utilizar para especificar un conjunto de protocolos"
            echo "salida :"
            netstat -s
            echo
            echo "ayuda :"
            echo ---------------------------------------------------------------------------------------------------------
            echo "protocolos :
            mostrará estadísticas generales, paquetes enviados , recividos, perdidas de conexion , etc ."
            echo
            'volvermenu'
            ;;
        3)
            clear
            'Network'
            ;;
        *)
			clear
			'networkip'
			;;
        
    esac
}


